<Window x:Class="Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example"
        mc:Ignorable="d"
        Title="Euros and cents" Height="450" Width="800">
    <Grid>
        <TextBox Name ="inputTextBox" HorizontalAlignment="Left" Height="23" Margin="58,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Input _cents" Target="{Binding ElementName=inputTextBox}" HorizontalAlignment="Left" Margin="58,141,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="output1TextBlock" HorizontalAlignment="Left" Margin="291,78,0,0" TextWrapping="Wrap" Background="LightBlue"  VerticalAlignment="Top" Height="23" Width="252"/>
        <TextBlock Name="output2TextBlock" Background="LightBlue" HorizontalAlignment="Left" Margin="291,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" Height="26"/>
        <Button Content="Calculate" Name="calculateButton" HorizontalAlignment="Left" Margin="69,268,0,0" VerticalAlignment="Top" Width="75" Click="calculateButton_Click"/>

    </Grid>
</Window>
