<Window x:Class="ExampleTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleTimer"
        mc:Ignorable="d"
        Title="Random" Height="450" Width="600">
    <Grid>
        <Button Content="Start" Name="startButton" HorizontalAlignment="Left" Margin="92,55,0,0" VerticalAlignment="Top" Width="75" Click="startButton_Click"/>
        <Button Content="Stop" Name="stopButton" HorizontalAlignment="Left" Margin="92,126,0,0" VerticalAlignment="Top" Width="75" Click="stopButton_Click"/>
        <Canvas Name="paperCanvas" ClipToBounds="True" Background="LightPink" HorizontalAlignment="Left" Height="291" Margin="212,55,0,0" VerticalAlignment="Top" Width="270"/>

    </Grid>
</Window>
